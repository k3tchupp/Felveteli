<Window x:Class="felveteli.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:felveteli"
        mc:Ignorable="d"
        Title="Mini KIFIR" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dtgFelveteli" Grid.RowSpan="3" Margin="30px"/>
        <Button x:Name="btnUjDiak" Grid.Column="1" Margin="30px" Width="200px" Content="Új Diák" FontSize="25px" Click="btnUjDiak_Click"/>
        <Button x:Name="btnTorles" Grid.Column="1" Grid.Row="1" Margin="30px" Width="200px" Content="Törlés" FontSize="25px" Click="btnTorles_Click"/>
        <Button x:Name="btnImport" Grid.Column="1" Grid.Row="2" Margin="30px" Width="200px" Content="Import" FontSize="25px" Click="btnImport_Click"/>
        <Button x:Name="btnExport" Grid.Column="1" Grid.Row="3" Margin="30px" Width="200px" Content="Export" FontSize="25px" Click="btnExport_Click"/>
    </Grid>
</Window>
